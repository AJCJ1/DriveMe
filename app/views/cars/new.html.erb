    <%= f.input :model %>
    <%= f.input :color %>
    <%= f.input :location %>
    <%= f.input :engine_size, label: "In Litres" %>
    <%= f.input :plate %>
    <%= f.input :price, label: "Price Per Day in Pounds Â£" %>
    <%= f.input :photos, as: :file, input_html: { multiple:true } %>
