<ul><%= @car.brand %></ul>
<ul><%= @car.model %></ul>
<ul><%= @car.color %></ul>

<ul>
  <% @car.bookings.each do |booking| %>
    <% if current_user == booking.user %>
      <li> <%= "Start date: #{booking.start_date} - End date #{booking.end_date}" %>
      <%= button_to "Delete this booking", booking, method: :delete %>
    <% else %>
      <%= nil %>
    <% end %>
  <% end %>
</ul>
 <%= current_user   %>
<%= link_to "Book this car", new_car_booking_path(@car) %>

<% if current_user == @car.user %>
  <%= button_to 'Delete car', @car, method: :delete %>
  <%= button_to 'Edit car', edit_car_path(@car), method: :get %>
<% else %>
  <%= nil %>
<% end %>

<%= link_to 'Back to cars', href='/cars' %>
